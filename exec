#!/bin/bash

domain="domainname.extension"

# Define your character set and length for subdomains
charset="abcdefghijklmnopqrstuvwxyz0123456789"
length=3  # You can adjust this as needed

# Check the HTTP status code for each subdomain and filter for 200
for subdomain in $(crunch $length $length -t $charset); do
    http_status=$(curl -s -o /dev/null -w "%{http_code}" "http://$subdomain.$domain")
    if [ "$http_status" == "200" ]; then
        echo "$subdomain.$domain: $http_status"
    fi
done
